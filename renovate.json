{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges",
    ":semanticCommits"
  ],
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "timezone": "Africa/Tunis",
  "schedule": ["after 09:00 before 18:00 every weekday"],
  "packageRules": [
    {
      "matchManagers": ["terraform"],
      "groupName": "terraform providers",
      "schedule": ["weekly"]
    },
    {
      "matchManagers": ["npm"],
      "groupName": "node tooling",
      "automerge": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "npm": {
    "enabled": true
  },
  "terraform": {
    "enabled": true
  }
}
