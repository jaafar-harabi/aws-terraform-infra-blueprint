{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges",
    ":semanticCommits"
  ],
  "labels": [
    "dependencies"
  ],
  "dependencyDashboard": true,
  "timezone": "Africa/Tunis",
  "schedule": [
    "every weekday"
  ],
  "enabledManagers": [
    "npm",
    "terraform"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "terraform"
      ],
      "groupName": "terraform providers",
      "schedule": [
        "every weekday"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "node tooling",
      "automerge": false
    }
  ]
}